				<field name="tipo_de_comprobante" />
				<field name="date"/>
				<field name="fecha_cfdi"/>
				<field name="folio" />
				<field name="partner_id" />
				<field name="total" />
				<field name="invoice_id" invisible="tipo_de_comprobante != 'SI'"/>
